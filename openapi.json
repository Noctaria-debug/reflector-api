{
  "openapi": "3.1.0",
  "info": {
    "title": "Reflector Sync API (via Proxy)",
    "version": "1.0.2",
    "description": "Unified memory/reflection/emotion sync and load API for Reflector Chronicle via proxy layer."
  },
  "servers": [
    {
      "url": "https://reflector-proxy.onrender.com",
      "description": "Primary Reflector Proxy Server"
    }
  ],
  "paths": {
    "/chronicle/sync": {
      "post": {
        "summary": "Create or update memory, reflection, or emotion",
        "operationId": "syncChronicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "test": {
                    "type": "string",
                    "example": "Sync memory"
                  },
                  "memory": {
                    "type": "object",
                    "description": "Memory data to store"
                  },
                  "reflection": {
                    "type": "object",
                    "description": "Reflection data to store"
                  },
                  "emotion": {
                    "type": "object",
                    "description": "Emotion data to store"
                  },
                  "data": {
                    "type": "string",
                    "description": "Fallback text data when no structured object is used"
                  },
                  "create_new": {
                    "type": "boolean",
                    "description": "Force creation of a new file"
                  },
                  "reset_drive_file": {
                    "type": "boolean",
                    "description": "Reset and create new file if existing is unauthorized"
                  },
                  "file_name": {
                    "type": "string",
                    "description": "Target JSON filename",
                    "example": "second_memory.json"
                  }
                },
                "required": ["test"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sync completed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "timestamp": { "type": "string" },
                    "google_drive": { "type": "object" },
                    "github": { "type": "object" },
                    "data_received": { "type": "object" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/chronicle/load": {
      "post": {
        "summary": "Retrieve chronicle file from Drive",
        "operationId": "loadChronicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file_name": {
                    "type": "string",
                    "description": "Target file name",
                    "example": "second_memory.json"
                  }
                },
                "required": ["file_name"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File loaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "file_id": { "type": "string" },
                    "content": { "type": "object" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "File not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}